{
  "name": "Boost ARMv8 Builder",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/clangd:1": {},
    "ghcr.io/devcontainers/features/cmake:1": {},
    "ghcr.io/devcontainers/features/python:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd"
      ]
    }
  },
  "postCreateCommand": "apt-get update && apt-get install -y gcc-aarch64-linux-gnu g++-aarch64-linux-gnu wget bzip2 tar build-essential",
  "remoteUser": "vscode"
}
